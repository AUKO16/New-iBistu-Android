<resources>

    <!--自定义appTheme-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- 支持库兼容 -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!--自定义无ActionBar主题-->
    <style name="MyAppTheme.NoActionBar" parent="@style/MyAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 自定义ActionBar样式 -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <!-- 支持库兼容 -->
        <item name="titleTextColor">@color/colorPureWhite</item>
        <item name="background">@color/colorPrimary</item>
    </style>


    <!--自定义黄页拨号Dialog-->
    <style name="YellowPageDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <!-- 自定义EditText theme -->
    <style name="edit_text_style" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:background">@drawable/selector_bg_edit_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">@color/colorHintGrey</item>
    </style>

</resources>
