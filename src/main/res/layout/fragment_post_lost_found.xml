<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPureWhite"
    android:orientation="vertical"
    tools:context="org.iflab.ibistubydreamfactory.fragment.PostLostFoundFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            app:theme="@style/MyActionBar"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_logo_bistu"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发布新信息"
                android:textColor="@color/colorPureWhite"
                android:textSize="20sp"
                />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >


            <EditText
                android:id="@+id/textView_title"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="标题："
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/textView_content"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:gravity="start|top"
                android:hint="描述："
                android:maxLines="20"
                android:singleLine="false"
                android:textSize="18sp"

                >
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="请上传至少一张图片："
                />


            <GridView
                android:id="@+id/gridView_selectedPhoto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="5dp">
            </GridView>


            <Button
                android:id="@+id/button_post"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bt_button_blue"
                android:text="发布"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

