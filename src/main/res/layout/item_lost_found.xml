<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title_lost_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:textColor="@color/colorPureBlack"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/time_lost_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        />


    <TextView
        android:id="@+id/content_lost_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPureBlack"
        android:textSize="15sp"
        />


    <com.lzy.ninegrid.NineGridView
        android:id="@+id/nineGridView_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ngv_gridSpacing="3dp"
        app:ngv_maxSize="9"
        app:ngv_mode="fill"
        app:ngv_singleImageRatio="1"
        app:ngv_singleImageSize="250dp"
        />

</LinearLayout>
